<?xml version="1.0"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="ProductService"
                   assembly="ProductService">

    <class name="Manufacturer" table="Manufacturers" lazy="false">

        <!-- Identity mapping -->
        <id name="ID">
            <column name="ManufacturerID" />
            <generator class="native" />
        </id>

        <!-- Simple mappings -->
        <property name="Name" />
 
    </class>

</hibernate-mapping>
