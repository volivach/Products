<?xml version="1.0"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="ProductService"
                   assembly="ProductService">

    <!-- Mappings for class 'Product' -->
    <class name="Product" table="Products" lazy="false">

        <!-- Identity mapping -->
        <id name="ID">
            <column name="ProductID" />
            <generator class="native" />
        </id>

        <!-- Simple mappings -->
        <property name="Name" />


      <many-to-one name="productType"
                 class="ProductType"
                 column="ProductType"
                 not-null="false"
                 unique="true"
                 cascade="save-update"/>

      <many-to-one name="Remnants"
                 class="Remnants"
                 column="Remnants"
                 unique="true"
                 cascade="all"/>

      <many-to-one name="Manufacturer"
                class="Manufacturer"
                column="ManufacturerID"
                cascade="save-update"/><!-- not-null="true"-->

      <many-to-one name="Provider"
                class="Provider"
                column="ProviderID"
                cascade="save-update"/>

      <many-to-one name="Price"
                class="Price"
                column="Price"
                unique="true"
                cascade="all"/>

    </class>

</hibernate-mapping>
